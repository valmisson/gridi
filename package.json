{
  "name": "gridi",
  "version": "1.0.0",
  "description": "A simple and flexible grid system created with flexbox using scss",
  "author": "Valmisson Grizorte",
  "license": "MIT",
  "main": "dist/gridi.css",
  "style": "dist/gridi.css",
  "sass": "scss/gridi.scss",
  "files": [
    "dist/",
    "scss/**/*.scss"
  ],
  "scripts": {
    "scss": "sass scss/gridi.scss dist/gridi.css --style expanded --embed-sources",
    "minify": "cleancss -O1 --format breakWith=lf --with-rebase --source-map --source-map-inline-sources --output dist/ --batch --batch-suffix \".min\" \"dist/*.css\" \"!dist/*.min.css\"",
    "prefix": "postcss --replace dist/gridi.css",
    "build": "run-s scss prefix minify",
    "version": "npm run build && conventional-changelog -p angular -i CHANGELOG.md -s -r 1 && git add .",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "autoprefixer": "10.2.6",
    "clean-css-cli": "^5.3.0",
    "conventional-changelog-cli": "^2.1.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.5",
    "postcss-cli": "^8.3.1",
    "sass": "^1.35.2"
  },
  "repository": "https://github.com/valmisson/gridi",
  "homepage": "https://github.com/valmisson/gridi#readme",
  "bugs": {
    "url": "https://github.com/valmisson/gridi/issues"
  },
  "keywords": [
    "css",
    "sass",
    "scss",
    "grid",
    "grid-system",
    "mobile-first",
    "responsive",
    "front-end",
    "flexible",
    "flexbox",
    "web"
  ]
}
